        <property name="ADD_ICON"           					value="Add.png"></property>
        <property name="MINUS_ICON"         					value="Minus.png"></property>
		<property name="EDIT_ICON"         						value="Edit.png"></property>
        <property name="PLAYER_SCREEN_ICON" 					value="PlayerScreen.png"></property>
