        <property name="DRAFT_HEADING_LABEL"           		value="Draft Summary"></property>
		<property name="FANTASY_TEAM_HEADING_LABEL"     	value="Fantasy Teams"></property>
        <property name="PLAYER_HEADING_LABEL"           	value="Available Players"></property>
